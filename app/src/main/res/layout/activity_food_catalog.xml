<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/food_catalog_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_foodCatalog_title"
        android:text="@string/tv_foodCatalog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/et_foodCatalog_food"/>

    <EditText
        android:id="@+id/et_foodCatalog_food"
        android:hint="@string/et_diet_food"
        android:inputType="text"
        android:autofillHints="text"
        android:digits = "abcdefghijklmnopqrstuvwxyz "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        app:layout_constraintTop_toBottomOf="@+id/tv_foodCatalog_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_foodCatalog_calories"
        app:layout_constraintBottom_toTopOf="@+id/et_foodCatalog_protein"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <EditText
        android:id="@+id/et_foodCatalog_calories"
        android:hint="@string/et_diet_calories"
        android:inputType="number"
        android:importantForAutofill="no"
        android:digits = "0123456789"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        app:layout_constraintTop_toTopOf="@+id/et_foodCatalog_food"
        app:layout_constraintLeft_toRightOf="@+id/et_foodCatalog_food"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/et_foodCatalog_food"
        android:layout_marginStart="30dp" />

    <EditText
        android:id="@+id/et_foodCatalog_protein"
        android:hint="@string/et_diet_protein"
        android:inputType="number"
        android:importantForAutofill="no"
        android:digits = "0123456789"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        app:layout_constraintTop_toBottomOf="@+id/et_foodCatalog_food"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_foodCatalog_carb"
        app:layout_constraintBottom_toTopOf="@+id/btn_foodCatalog_add"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <EditText
        android:id="@+id/et_foodCatalog_carb"
        android:hint="@string/et_diet_carb"
        android:inputType="number"
        android:importantForAutofill="no"
        android:digits = "0123456789"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        app:layout_constraintTop_toTopOf="@+id/et_foodCatalog_protein"
        app:layout_constraintLeft_toRightOf="@+id/et_foodCatalog_protein"
        app:layout_constraintRight_toLeftOf="@+id/et_foodCatalog_fat"
        app:layout_constraintBottom_toBottomOf="@+id/et_foodCatalog_protein"
        android:layout_marginStart="15dp" />

    <EditText
        android:id="@+id/et_foodCatalog_fat"
        android:hint="@string/et_diet_fat"
        android:inputType="number"
        android:importantForAutofill="no"
        android:digits = "0123456789"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        app:layout_constraintTop_toTopOf="@+id/et_foodCatalog_protein"
        app:layout_constraintLeft_toRightOf="@+id/et_foodCatalog_carb"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/et_foodCatalog_protein"
        android:layout_marginStart="15dp" />

    <Button
        android:id="@+id/btn_foodCatalog_add"
        android:text="@string/btn_foodCatalog_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_foodCatalog_protein"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ll_food_list"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_food_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_foodCatalog_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:background="@null">

        <TextView
            android:id="@+id/tv_food_name"
            android:text="@string/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_food_calories"
            app:layout_constraintBottom_toTopOf="@+id/rv_food_list"
            android:textSize="20sp"
            android:background="@null" />

        <TextView
            android:id="@+id/tv_food_calories"
            android:text="@string/tv_food_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_food_name"
            app:layout_constraintLeft_toRightOf="@+id/tv_food_name"
            app:layout_constraintRight_toLeftOf="@+id/tv_food_protein"
            app:layout_constraintBottom_toBottomOf="@+id/tv_food_name"
            android:textSize="20sp"
            android:background="@null"/>

        <TextView
            android:id="@+id/tv_food_protein"
            android:text="@string/tv_food_protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_food_name"
            app:layout_constraintLeft_toRightOf="@+id/tv_food_calories"
            app:layout_constraintRight_toLeftOf="@+id/tv_food_carbs"
            app:layout_constraintBottom_toBottomOf="@+id/tv_food_name"
            android:textSize="20sp"
            android:background="@null"/>

        <TextView
            android:id="@+id/tv_food_carbs"
            android:text="@string/tv_food_carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_food_name"
            app:layout_constraintLeft_toRightOf="@+id/tv_food_protein"
            app:layout_constraintRight_toLeftOf="@+id/tv_food_fat"
            app:layout_constraintBottom_toBottomOf="@+id/tv_food_name"
            android:textSize="20sp"
            android:background="@null"/>

        <TextView
            android:id="@+id/tv_food_fat"
            android:text="@string/tv_food_fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_food_name"
            app:layout_constraintLeft_toRightOf="@+id/tv_food_carbs"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_food_name"
            android:textSize="20sp"
            android:background="@null"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_food_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_food_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@null"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>